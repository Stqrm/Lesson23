<h2>Visit us</h2>
<form action="/visit" method="POST">
  <div class="form-group">
    <label>Your name</label>
    <input name="username" type="text" class="form-control ccc" placeholder="Your name">
  </div>
  <div class="form-group">
    <label>Your phone</label>
    <input name="phone" type="text" class="form-control ccc" placeholder="Your phone">
  </div>
  <div class="form-group">
    <label>Date and time</label>
    <input id="aaa" name="date_time" type="text" class="form-control" placeholder="Date time">
  </div>
  <div class="form-group">
    <label>Your master</label>
    <select name="master" class="form-control">
      <option>Jessie</option>
      <option>Walter</option>
      <option>Gus</option>
    </select>
  </div>
  <div class="form-group">
    <label>Color: </label>
    <select id="color" name="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Press me</button>
</form>

<script type="text/javascript">
  $('#color').simplecolorpicker();
</script>